#:import TwoLineAvatarListItem kivymd.list.TwoLineAvatarListItem
#:import MDTextButton kivymd.button.MDTextButton
#:import MDCheckbox kivymd.selectioncontrols.MDCheckbox
#:import MDLabel kivymd.label.MDLabel
#:import MDTextField kivymd.textfields.MDTextField


<Navigator>:
    id: nav_drawer
    NavigationDrawerIconButton:
        Spinner:
            pos_hint:{"x":0,"y":.3}
            id: btn
            background_color: app.theme_cls.primary_dark
            text: app.showmeaddresses(name='text')
            values: app.showmeaddresses(name='values')
            on_text:app.getCurrentAccountData(self.text)

    NavigationDrawerIconButton:
        icon: 'email-open'
        text: "inbox"
        on_release: app.root.ids.scr_mngr.current = 'inbox'
    NavigationDrawerIconButton:
        icon: 'send'
        text: "sent"
        on_release: app.root.ids.scr_mngr.current = 'sent'
    NavigationDrawerIconButton:
        icon: 'dropbox'
        text: "trash"
        on_release: app.root.ids.scr_mngr.current = 'trash'
    NavigationDrawerIconButton:
        icon: 'email'
        text: "drafts"
        on_release: app.root.ids.scr_mngr.current = 'dialog'
    NavigationDrawerIconButton: 
        text: "new identity"
        icon:'account-plus'
        on_release: app.root.ids.scr_mngr.current = 'newidentity'

BoxLayout:
    orientation: 'vertical'
    Toolbar:
        id: toolbar
        title: app.getCurrentAccount()
        background_color: app.theme_cls.primary_dark
        left_action_items: [['menu', lambda x: app.nav_drawer.toggle()]]
        right_action_items: [['plus', lambda x: app.createMessage()]]

    ScreenManager:
        id: scr_mngr
        Inbox:
            id: inbox
        Sent:
            id: sent
        Trash:
            id: trash
        Create:
            id: create
        NewIdentity:
            id: new_identity
        Message:
            id: message
        AddressSuccessful:
            id: add_success

<SwipeButton>:
    text: ''
    size_hint_y: None
    height: 48
    ignore_perpendicular_swipes: True
    data_index: 0
    min_move: 20 / self.width

    Button:
        text: 'delete ({}:{})'.format(root.text, root.data_index)
        on_press: app.delete(root.msgid)

    TwoLineAvatarListItem:
        text: root.text
        secondary_text: root.address
        on_press: app.getInboxMessageDetail(root.msgid)

    Button:
        text: 'archive'
        on_press: app.archive(root.data_index)

<Inbox>:
    name: 'inbox'
    RecycleView:
        data: root.data
        viewclass: 'SwipeButton'
        do_scroll_x: False
        scroll_timeout: 100

        RecycleBoxLayout:
            id:rc
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            default_size_hint: 1, None

<Sent>:
    name: 'sent'
    RecycleView:
        data: root.data
        viewclass: 'SwipeButton'
        do_scroll_x: False
        scroll_timeout: 100

        RecycleBoxLayout:
            id:rc
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            default_size_hint: 1, None

<Trash>:
    name: 'trash'
    RecycleView:
        data: root.data
        viewclass: 'SwipeButton'
        do_scroll_x: False
        scroll_timeout: 100

        RecycleBoxLayout:
            id:rc
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            default_size_hint: 1, None

<Create>:
    name: 'create'
    GridLayout:
        rows: 5
        cols: 1
        padding: 60,60,60,60
        spacing: 50
        BoxLayout:
            size_hint_y: None
            height: '32dp'
            Label:
                text: 'FROM'
                color: 0,0,0,1
            Spinner:
                size_hint: 1,1
                pos_hint: {"x":0,"top":1.}
                pos: 10,10
                id: sender
                text: app.showmeaddresses(name='text')
                values: app.showmeaddresses(name='values')

        BoxLayout:
            size_hint_y: None
            height: '32dp'
            Label:
                text: 'TO'
                color: 0,0,0,1
            TextInput:
                id: recipient
                hint_text: 'To'

        BoxLayout:
            size_hint_y: None
            height: '32dp'
            Label:
                text: 'SUBJECT'
                color: 0,0,0,1
            TextInput:
                id: subject
                hint_text: 'SUBJECT'

        BoxLayout:
            size_hint_y: None
            height: '32dp'
            Label:
                text: 'BODY'
                color: 0,0,0,1
            TextInput:
                id: message
                multiline:True
                size_hint: 1,2

    Button:
        text: 'send'
        size_hint_y: 0.1
        size_hint_x: 0.2
        height: '32dp'
        pos_hint: {'x': .5, 'y': 0.1}
        on_press: root.send()
    Button:
        text: 'cancel'
        size_hint_y: 0.1
        size_hint_x: 0.2
        height: '32dp'
        pos_hint: {'x': .72, 'y': 0.1}
        on_press: root.cancel()

<NewIdentity>:
    name: 'newidentity'
    GridLayout:
        padding: '120dp'
        cols: 1
        MDLabel:
            text:"""Here you may generate as many addresses as you like. Indeed, creating and abandoning addresses is encouraged."""
            line_height:1.5
            text_size:(700,None)
        BoxLayout:
            MDCheckbox:
                group: "money"
                name: "random"
                on_release:
                    root.checked = self.name
            MDLabel:
                text: "use a random number generator to make an address"
        BoxLayout:
            MDCheckbox:
                group: "money"
                name: 'pseudorandom'
                on_release:
                    root.checked = self.name
            MDLabel:
                text: "use a pseudo number generator to make an address"
        MDLabel:
            size_hint_x: .35
            markup: True
            text: "[b]{}[/b]".format("Randomly generated addresses")
        BoxLayout:
            size_hint_y: None
            height: '32dp'
            MDTextField:
                id: label
                hint_text: "Label (not shown to anyone except you)"


    Button:
        text: 'Cancel'
        size_hint_y: 0.1
        size_hint_x: 0.3
        height: '32dp'
        pos_hint: {'x': .1, 'y': 0.1}
    Button:
        text: 'Ok'
        size_hint_y: 0.1
        size_hint_x: 0.3
        height: '32dp'
        pos_hint: {'x': .5, 'y': 0.1}
        on_press: root.generateaddress()

<Message>:
    name: 'message'
    id: message
    Label:
        id: ebin
        text: 'I am on description of my email yooooo'
        color: 0,0,0,1

<AddressSuccessful>:
    name: 'add_sucess'
    Label:
        text: 'Successfully created a new bit address'
        color: 0,0,0,1
